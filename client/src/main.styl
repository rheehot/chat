* { box-sizing: border-box }

body
  background: #EEE

input.field
  outline: none
  border: none
  padding: 0
  width: 100%
  background: #f5f5f5
  padding: 5px

// No underlink under link
a:link, a:visited
  text-decoration: none

#chat
  position: absolute
  left: 10px
  right: 10px
  top: 10px
  bottom: 10px

  background: white
  display: flex

  > #channels
    width: 100px
    flex-shrink: 0

    border-width: 0 1px 0 0
    border-style: solid
    border-image: linear-gradient(to top, white, #EEE, white) 1 100%;

    > ul
      margin: 0
      padding: 3px
      list-style-type: none
      cursor: pointer

      > li
        overflow-x: hidden
        white-space: nowrap
        text-overflow: ellipsis
      > li:hover { background: #F0F0F0 }
      > li#current
        font-weight: 600
        color: #750000

  > #buffer
    flex-grow: 1
    display: flex
    flex-direction: column

    > ul
      flex-grow: 1
      margin: 0
      padding: 3px
      list-style-type: none
      overflow-y: scroll

      > li
        display: flex

        > .nick
          color: gray
          font-size: 0.8em
          margin-right: 10px
          white-space: nowrap
          flex-shrink: 0
        > .content
          flex-grow: 1
          word-break: break-all
        > .control
          margin-right: 10px
          white-space: nowrap
          > i { cursor: pointer }

        &:hover { background: #F0F0F0 }
        &:not(:hover) .control { visibility: hidden }

        // 수정중인 메세지
        > .content > input
          width: 100%
          outline: none
          border: none
          padding: 0
          background: transparent
          color: #0063BD

    > form
      display: flex
      input-height = 30px

      > span
        white-space: nowrap
        font-size: 0.8em
        padding: 0 3px
      span, input
        height: input-height
        line-height: input-height
